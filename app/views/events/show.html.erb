<p id="notice"><%= notice %></p>

<h1><%= @event.title %></h1>

<div class="row">
  <div class="col-md-8">

    <div class="event_info">

      <dl>
        <dt><%= t('orner') %></dt>
        <dd><%= @orner_name %></dd>
        <dt><%= t('message') %></dt>
        <dd><%= @event.message %></dd>
      </dl>

      <% if @event.place.empty? %>

      <dl>
        <dt><%= t('place') %></dt>
        <dd><%= t('undecided') %></dd>
      </dl>

      <% else %>

      <div class="row" style="margin-bottom:40px;">
        <div class="col-md-8">
          <!-- 地図を表示 -->
          <div id='map_info' data-json='<%= @hash %>'>
            <div id="map" style='height: 400px;'></div>
          </div>
        </div>

        <div id="place_info" class="col-md-4">
          <dl>
            <dt><%= t('place') %></dt>
            <dd><%= @event.place %></dd>
            <dt><%= t('cost') %></dt>
            <dd><%= @event.cost %>円</dd>
          </dl>
        </div>
      </div>

      <% end %>

    </div>

    <% if @event.color == 'yellow' %>

    <%= render 'undecided' %>

    <% else %>

    <%= render 'decided' %>

    <% end %>

  </div>

  <div class="col-md-4">

    <div id="chat" data-event="<%= @event.id %>" data-username="<%= @login_user.username %>">

      <!-- <ul class="list-group"> -->
      <!-- <li class="list-group-item"> -->

      <%= form_for @comment, url: event_comments_path(@event), class: "form-horizontal", remote: true, role: "form" do |f| %>

        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :event_id, value: @event.id %>
        <div class="form-group">
          <%= f.text_area :body, placeholder: t('write comment'), id: "msgbody", class: 'form-control' %>
        </div>
        
        <div class="text-center">
          <%= f.submit class: "btn btn-primary", id: "send", value: "送信"%>
        </div>

      <% end %>

      <!-- <input type="button" class="btn btn-primary" id="send" value="送信"/> -->
      <div id="chat_area">

        <%= render 'comments/comments_view' %>
        
      </div>

    </div>

  </div>

</div>

<%= javascript_include_tag 'chat' %>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
