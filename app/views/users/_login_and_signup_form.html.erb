<div class="panel-heading">
  <div class="row">
    <div class="col-xs-6">
      <a href="#" class="active" id="login-form-link"><%= t('log in') %></a>
    </div>
    <div class="col-xs-6">
      <a href="#" id="register-form-link"><%= t('sign up') %></a>
    </div>
  </div>
  <hr>
</div>
<div class="panel-body">
  <div class="row">
    <div class="col-lg-12">
      <div id="login-form" <% if active == 'signup' %> style="display: none;" <% end %>>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), id:"id") do |f| %>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, tabindex: "1", class: "form-control", placeholder: "Email Address" %>
          </div>
          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", tabindex: "2", class: "form-control", placeholder: "Password" %>
          </div>
          <div class="form-group text-center">
            <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
            <% end -%>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-sm-6 col-sm-offset-3">
                <%= f.submit t('log in'), tabindex: "3", class: "form-control btn btn-login", data: { disable_with: t('sending') } %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="text-center">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        <% end %>
      </div>
      <div id="register-form" <% if active == 'login' %> style="display: none;" <% end %>>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :username %><br />
          <%= f.text_field :username, autofocus: true, tabindex: "1", class: "form-control", placeholder: "Username" %>
        </div>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, tabindex: "2", class: "form-control", placeholder: "Email Address" %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", tabindex: "3", class: "form-control", placeholder: "Password" %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", tabindex: "4", class: "form-control", placeholder: "Password Confirmation" %>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
              <%= f.submit t('sign up'), tabindex: "5", class: "form-control btn btn-register", data: { disable_with: t('sending') } %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
