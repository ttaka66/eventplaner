<div id="change_profile" class="col-md-8 col-md-offset-2">
  <div class="row">
    <h2><%= t('change profile') %></h2>
  </div>
  <hr>
  <div class="row">
    <div class="col-lg-12">
      <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :username %><br />
          <%= f.text_field :username, autofocus: true, tabindex: "1", class: "form-control", placeholder: "Username" %>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
              <%= f.submit t('change profile'), tabindex: "2", class: "form-control btn btn-success", data: { disable_with: t('sending') } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
